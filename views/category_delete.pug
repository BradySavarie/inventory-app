extends layout

block content
  h1 #{title}: #{category.name}

  if category_effects.length

    p #[strong Delete the following effects before attempting to delete this category.]

    div(style='margin-left:20px;margin-top:20px')

      h4 Effects

      dl
      each effect in category_effects
        dt
          a(href=effect.url) #{effect.model}
        dd #{effect.description}

  else
    p Do you really want to delete this Category?

    form(method='POST' action='')
      div.form-group
        input#categoryid.form-control(type='hidden',name='categoryid', required='true', value=category._id )

      button.btn.btn-primary(type='submit') Delete