extends layout

block content

  h1 Category: #{category.name}

  div(style='margin-left:20px;margin-top:20px')

    h4 Effects

    dl
      each effect in category_effects
        dt
          a(href=effect.url) #{effect.model}
        dd #{effect.description}

      else
        p This genre has no effects

  hr
  p
    a(href=category.url+'/delete') Delete category